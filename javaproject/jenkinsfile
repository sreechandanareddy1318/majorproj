pipeline {
    agent any

    tools {
        jdk 'jdk-21'
    maven 'maven-3.9'
    }

    stages {

        stage('Git Checkout') {
            steps {
                git 'https://github.com/sreechandanareddy1318/java-proj.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
	        stage('Deploy to Tomcat') {
            steps {
                withCredentials([usernamePassword
		(
                    credentialsId: 'tomcat-creds',
                    usernameVariable: 'admin',
                    passwordVariable: 'admin123'
                )]) {
                    sh '''
                    curl -u $TOMCAT_USER:$TOMCAT_PASS \
                    -T target/*.war \
                    "http://localhost:8081/manager/text/deploy?path=/myapp&update=true"
                    '''
                }
            }
        }
    }
}

